{
  "name": "mern-app",
  "version": "1.0.0",
  "description": "MERN application",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "server": "nodemon app.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run client\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gpasha/mern-app.git"
  },
  "keywords": [
    "MERN",
    "MongoDB",
    "Express",
    "React",
    "Node"
  ],
  "author": "Pavel Glebik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gpasha/mern-app/issues"
  },
  "homepage": "https://github.com/gpasha/mern-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "http-proxy-middleware": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.5",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.12"
  }
}
